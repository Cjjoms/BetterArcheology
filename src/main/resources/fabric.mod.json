{
  "schemaVersion": 1,
  "id": "betterarcheology",
  "version": "${version}",

  "name": "Better Archeology",
  "description": "Discover artifacts & fossils by encountering new structures that'll enhance your adventure and exploration!",
  "authors": [
    "Pandarix",
    "Dunk3ll1cht"
  ],
  "contact": {
    "homepage": "https://legacy.curseforge.com/minecraft/mc-mods/better-archeology",
    "sources": "https://github.com/Pandarix/BetterArcheology"
  },

  "license": "MIT",
  "icon": "assets/betterarcheology/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.Pandarix.betterarcheology.BetterArcheology"
    ],
    "client": [
      "net.Pandarix.betterarcheology.BetterArcheologyClient"
    ],
    "jei_mod_plugin": [
      "net.Pandarix.betterarcheology.compat.jei.JeiPlugin"
    ]
  },
  "mixins": [
    "betterarcheology.mixins.json"
  ],

  "accessWidener" : "betterarcheology.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.14",
    "fabric-api": "*",
    "minecraft": "~1.20",
    "java": ">=17",
    "yungsapi": ">=${yungsapi_mc_version}-Fabric-${yungsapi_version}",
    "supermartijn642configlib": ">=1.1.8"
  },
  "suggests": {
    "another-mod": "*"
  }
}
